
{
  "name": "powerflow-app",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Windows电源与办公助手",
  "author": "PowerFlow Team",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "electron:dev": "electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.powerflow.app",
    "productName": "PowerFlow智能助手",
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "target": ["nsis"],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "PowerFlow智能助手"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "public/**/*"
    ]
  },
  "electronMirror": "https://npmmirror.com/mirrors/electron/",
  "electronBuilderBinariesMirror": "https://npmmirror.com/mirrors/electron-builder-binaries/"
}
